---
const { ...props } = Astro.props;
---

<div {...props} data-form-loader hidden>
  <svg width='18' height='18' viewBox='25 25 50 50'>
    <circle cx='50' cy='50' r='20' fill='none' stroke='currentColor' stroke-linecup='round' stroke-width='5'></circle>
  </svg>
</div>

<style lang='scss'>
  [hidden] {
    display: none;
  }
  div {
    position: absolute;
    left: -16px;
    top: -16px;
    right: -16px;
    bottom: -16px;
    display: grid;
    place-items: center;
    backdrop-filter: blur(5px);
    z-index: 4;
    svg {
      width: 18px;
      height: 18px;
      animation: rotate 1.5s linear infinite;
      circle {
        stroke-dasharray: 150 200;
        stroke-dashoffset: -10;
        animation: dash 1s var(--easing) infinite;
      }
      @keyframes rotate {
        100% {
          transform: rotate(360deg);
        }
      }
      @keyframes dash {
        0% {
          stroke-dasharray: 1 200;
          stroke-dashoffset: 0;
        }
        50% {
          stroke-dasharray: 89 200;
          stroke-dashoffset: -35;
        }
        100% {
          stroke-dasharray: 89 200;
          stroke-dashoffset: -124;
        }
      }
    }
  }
</style>
