---
import { Icon } from "astro-icon/components";

type Props = {
  error?: string;
};

const { error } = Astro.props;
---

{
  error && (
    <span class='error' role='alert'>
      <Icon name='error' size={16} />
      <span>{error}</span>
    </span>
  )
}

<style lang='scss'>
  .error {
    font-size: calc(14rem / 16);
    color: var(--notification-red-500, #bb0c0c);
    width: fit-content;
    display: flex;
    align-items: center;
    gap: 4px;
    animation: reveal 0.5s both;
    svg {
      flex-shrink: 0;
    }
    @keyframes reveal {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  }
</style>
